{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "extends": "monorepo:nextjs",
      "groupName": "nextjs monorepo",
      "matchPackageNames": [
        "eslint-config-next",
        "next",
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "i18next monorepo",
      "matchPackageNames": ["/i18next/"]
    }
  ]
}
